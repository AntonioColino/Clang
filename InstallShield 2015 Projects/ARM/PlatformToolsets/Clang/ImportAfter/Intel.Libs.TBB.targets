<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <UsingTask TaskName="ICMessage" AssemblyFile="$(VCTargetsPath)Intel.Build.ICLTasks.v150.dll" Condition="'$(PlatformToolset)' == 'v141'"/>

<!--"Could not expand {0} variable. Corresponding version of Intel(R) TBB is not installed or the registry information may be incorrect."-->
  <Target Name="CheckIntelEnvironmentForVCLibsTBB" BeforeTargets="ClCompile" Condition="'$(PlatformToolset)' == 'v141' AND '$(UseIntelTBB)' == 'true' AND '$(UseEnv)' != 'true'">
    <ICMessage Code="WRN001" Type="Warning" Arguments="TBBIncludeDir;TBB"  Condition="'$(TBBIncludeDir)'==''" />
    <ICMessage Code="WRN001" Type="Warning" Arguments="TBBLibDir;TBB" Condition="'$(TBBLibDir)'==''" />
  </Target>

</Project>
